<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 1. Определяем аппендер с ротацией по дате -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Основной файл -->
        <file>logs/hz_farm.log</file>

        <!-- Ротация: каждый день создаётся новый файл -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/hz-farm.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Храним архивы за последнюю неделю -->
            <maxHistory>7</maxHistory>
            <!-- Удаляем старые файлы, если суммарный размер архивов > 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <!-- Формат записи -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 2. Консольный аппендер -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 3. Логгер уровня по умолчанию -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ROLLING"/>
    </root>

    <!-- 4. Отдельный пакет с детальным логированием -->
    <logger name="hz_farm" level="DEBUG" additivity="false">
        <appender-ref ref="ROLLING"/>
    </logger>

</configuration>